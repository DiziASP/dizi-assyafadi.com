---
import { links } from "@/lib/site.config";
import Reveal from "@/components/Reveal";
---

<section
  class="flex flex-col w-full gap-6 justify-center md:px-12"
  id="contact"
>
  <div class="items-center justify-between w-full flex flex-row space-x-6">
    <h2 class="text-3xl text-center md:text-5xl font-semibold">
      <span class="text-2xl font-normal">03.</span>
      Contact<span class="dark:text-teal-400 text-teal-600 animate-pulse"
        >.</span
      >
    </h2>
    <hr class="flex-grow border-2 border-accent" />
  </div>

  <!-- Content -->
  <Reveal client:visible>
    <div class="flex flex-col space-y-6">
      <p class="md:text-lg max-w-[768px] text-justify">
        I'm currently looking for new opportunities, my inbox is always open.
        You can contact me through my Email or Social Media. Whether you have an
        offer, question or just want to say hi, I'll try my best to get back to
        you!
      </p>
      <div class={`flex flex-col gap-4 max-w-[396px]`}>
        {
          links.map((link) => (
            <a
              title={link.title}
              href={link.url}
              target="_blank"
              rel="noreferrer noopener"
              class="flex flex-row items-center gap-2 md:text-lg font-semibold hover:text-muted-foreground transition-colors"
            >
              <link.icon size={24} className="hover:scale-110" /> {link.title}
            </a>
          ))
        }
      </div>
    </div>
  </Reveal>
</section>
